@model QLCuaHangVali.Models.KHACHHANG
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align: center;">Đăng ký thông tin khách hàng</h2>
<script src="~/Scripts/jquery.validate.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="hoten" class="col-md-4" style="text-align: right">
            Họ tên khách hàng
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenkhachhang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="tendangnhap" class="col-md-4" style="text-align: right">
            Tên đăng nhập
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.taikhoankh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.taikhoankh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="matkhau" class="col-md-4" style="text-align: right">
            Mật khẩu
        </label>
        <div class="col-md-4" ty>
            @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="MatKhauXacNhan" class="col-md-4" style="text-align: right">
            Mật khẩu xác nhận:
        </label>
        <div>
            <input class=" col-md-4 text-box single-line input-validation-error"
                   data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                   id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria-
                   describedby="MatKhauXacNhan-error" aria-invalid="true">
            @ViewData["NhapMKXN"]
            @ViewData["MatKhauGiongNhau"]
        </div>
    </div>

    <div class="form-group">
        <label for="checkemail" class="col-md-4" style="text-align: right">
            Email
        </label>
        <div class="col-md-4">
            <input type="email" name="email" class="form-control" id="email" />
            @*@Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="hoten" class="col-md-4" style="text-align: right">
            Số điện thoại
        </label>
        <div class="col-md-4">

            @Html.EditorFor(model => model.sodienthoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sodienthoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="diachi" class="col-md-4" style="text-align: right">
            Địa chỉ:
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="hoten" class="col-md-4" style="text-align: right">
            Ngày sinh
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.ngaysinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngaysinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8" style="text-align: right">
            <input type="submit" value="Đăng ký" class="btn btn-default " />
        </div>
    </div>
</div>
}

