
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using QLCuaHangVali.Models
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="Text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td width="50px"> Mã Vali</td>
        <td width="50px">> Tên Vali</td>
        <td width="50px">> Ảnh sản phẩm</td>
        <td width="50px">> Số lượng</td>
        <td> Đơn giá</td>
        <td> Thành tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.imavali</td>
            <td>@item.itenvali</td>
            <td><img src="~/Content/AnhVali/@item.ianhvali" /></td>
            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @imavali = item.imavali }))
            {
                <td> <input type="number" min="1" name="txtSoluong" value="@item.isoluong" style="background-color:yellow" /></td>
                <td>@String.Format("{0:0,0}", item.dDongia)</td>
                <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                <td> <a href="@Url.Action("Details", "TrangChu", new { id = item.imavali })">Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @imavali = item.imavali })</td>
                <td><input type="submit" value="Cập nhật" /></td>
            }

        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td colspan="4">Số lượng sách:@ViewBag.Tongsoluong</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
    </tr>
</table>

